<script type="text/javascript">
$(document).ready(function() {
	var game = Sudoku.getInstance();
	//game.setSize($('#size').val());
	$('#container').append(game.getGameBoard());

	$('#generate').click(function() {
		game.generate($('#diff_set').val());
	});

	$('#solve').click(function() {
		game.solve();
	});

	$('#validate').click(function() {
		game.validate();
	});

	$('#reset').click(function() {
		game.reset();
	});

	$('#check').click(function() {
		game.check();
	})

	/*$('#4by4').click(function() {
		game.setSize(4);
		$('#table').remove();
		$('#container').append(game.getGameBoard());
	});*/
});
</script>
<!-- need to add buttons for 9x9 and 4x4 matrices -->
<div id="container"></div>
<div id="menu" class="sudoku-menu">
	<div class="inner"><input id="diff_set" type="number" name="difficulty" min="30" max="64" value="30"></div>
	<div class="inner"><button id="generate">Generate</button></div>
	<div class="inner"><button id="check">Check</button></div>
	<div class="inner"><button id="solve">Solve</button></div>
	<div class="inner"><button id="validate">Validate Board</button></div>
	<div class="inner"><button id="reset">Reset</button></div>
	<!-- need to add a notification when the game is finished -->
</div>
