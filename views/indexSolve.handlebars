<script type="text/javascript">
$(document).ready(function() {
	var game = Sudoku.getInstance();
	
	$('#container').append(game.getGameBoard(9));

	$('#solve').click(function() {
		game.solve();
	});

	$('#validate').click(function() {
		game.validate();
	});

	$('#reset').click(function() {
		game.reset();
	});
});
</script>

<div style="color: white; text-align: center; font-size: 30px;"> Showcasing the solving algorithm </div>

<div id="container"></div>
<div id="menu" class="sudoku-menu">
	<div class="inner"><button id="solve" class="btn btn-default">Solve</button></div>
	<div class="inner"><button id="validate" class="btn btn-default">Validate Board</button></div>
	<div class="inner"><button id="reset" class="btn btn-default">Reset</button></div>
</div>
