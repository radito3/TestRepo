<!DOCTYPE html>
<html>
<head>
  <title>Sudoku Online</title>
  <meta charset="utf-8">
  <link rel="stylesheet" href="/css/bootstrap.css" />
  <link rel="stylesheet" href="/css/style.css" />
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  <script src="/js/sudokuAlg.js"></script>
</head>
<body>
	<div class="container-fluid">
    <div class="header clearfix">
      <nav>
        <ul class="nav nav-pills pull-right">
          {{#if user}}
            <li><button id="solver" class="btn btn-default">Solver</button></li>
            <li role="presentation"><a href="/users/times">Personal times</a></li>
            <li role="presentation"><a href="/users/logout">Logout</a></li>
          {{else}}
            <li role="presentation"><a href="/users/login">Login</a></li>
            <li role="presentation"><a href="/users/register">Register</a></li>
          {{/if}}
        </ul>
      </nav>
      <a href="/" class="text-muted" style="color: white;">Sudoku Online</a>
    </div>

    <div class="row justify-content-start">
      <div class="col-lg-8">
        {{#if success_msg}}
          <div class="alert alert-success">{{success_msg}}</div>
        {{/if}}

        {{#if error_msg}}
          <div class="alert alert-danger">{{error_msg}}</div>
        {{/if}}

        {{#if error}}
          <div class="alert alert-danger">{{error}}</div>
        {{/if}}
        
        {{{body}}}
      </div>

    </div>

  </div>

  <div class="container-fluid">
    <footer class="footer">
      <span>
        <p style="color: white; display: inline-block;">&copy; Sudoku Application </p>
        <a href="/about" class="pull-right" id="#about"> About </a> 
      </span>
    </footer>
  </div>

  <script type="text/javascript">
    $('#solver').click(() => {
      $(location).attr('href', '/solver');
    });
  </script>
</body>
</html>
